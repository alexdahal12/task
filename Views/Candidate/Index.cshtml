@model IEnumerable<JobCandidatesApi.Models.Candidate>

@{
    Layout = "_Layout";
}

<h2 class="mt-4">Candidates</h2>

<!-- Add a button to create a new candidate at the top -->
<div class="mb-3">
    <a asp-action="Create" asp-controller="Candidate" class="btn btn-success">Add New Candidate</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>LinkedIn</th>
            <th>GitHub</th>
            <th>Text Comment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidate in Model)
        {
            <tr>
                <td>@candidate.firstname</td>
                <td>@candidate.lastname</td>
                <td>@candidate.Email</td>
                <td>@candidate.Phone</td>
                <td>
                    <a href="@candidate.LinkedIn" target="_blank">@candidate.LinkedIn</a>
                </td>
                <td>
                    <a href="@candidate.GitHub" target="_blank">@candidate.GitHub</a>
                </td>
                <td>@candidate.TextComment</td>
                <td>
                    <!-- Actions with styled buttons -->
                    <a asp-action="Details" asp-route-id="@candidate.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@candidate.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@candidate.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Additional 'Create New' button at the bottom -->
<div class="text-end mt-3">
    <a asp-action="Create" asp-controller="Candidate" class="btn btn-primary">Add New Candidate</a>
</div>
